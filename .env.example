# Generate at: https://myaccount.google.com/apppasswords

# Upload Settings
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif

# Admin User (First-time setup)
DEFAULT_ADMIN_NAME=Admin User
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=change-this-password-immediately

# ML Model Settings
ML_MODELS_DIR=models
ML_TRAIN_MIN_SAMPLES=10
ML_CATEGORY_CONFIDENCE_THRESHOLD=0.6
ML_PRIORITY_CONFIDENCE_THRESHOLD=0.7

# Priority Scoring Weights
PRIORITY_WEIGHT_SEVERITY=0.35
PRIORITY_WEIGHT_LOCATION=0.25
PRIORITY_WEIGHT_REPORTS=0.15
PRIORITY_WEIGHT_AGE=0.15
PRIORITY_WEIGHT_SAFETY=0.10

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_DEFAULT=100 per hour
RATE_LIMIT_STRICT=30 per hour  # For sensitive endpoints

# Security Settings
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600  # 1 hour in seconds

# Logging
LOG_LEVEL=INFO
LOG_FILE_MAX_BYTES=10485760  # 10MB
LOG_FILE_BACKUP_COUNT=5

# Google Maps API (Optional - for enhanced mapping)
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Azure/AWS Configuration (Optional - for cloud deployment)
# AZURE_STORAGE_CONNECTION_STRING=your-connection-string
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_S3_BUCKET=your-bucket-name

# Redis Configuration (Optional - for caching)
# REDIS_URL=redis://localhost:6379/0

# Celery Configuration (Optional - for async tasks)
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0
